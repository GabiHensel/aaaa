<form action="/artigoEdit/{{artigo.id}}" method="post">
    Titulo: <input type="text" name="titulo" value="{{artigo.titulo}}">
    <br> <br>
    Resumo: <input type="text" name="resumo" value="{{artigo.resumo}}">
    <br> <br>
    Link: <input type="text" name="linkPDF" value="{{artigo.linkPDF}}">
    <br><br>
    Autores:
    {{#each usuarios}}
        <input type="checkbox" name="autores" value="{{id}}" {{#if (includes artigo.usuarios this)}}checked{{/if}}>{{nome}}<br>
    {{/each}}
    <br><br>
    <input type="submit" value="Salvar">
</form>
