<head>
    <style>
        form {
            width: 50%; 
            margin: 0 auto; 
            padding: 20px; 
            border: 1px solid #ccc; 
            border-radius: 5px; 
            background-color: #fff; 
        }

        h2 {
            color: #007bff; 
            margin-bottom: 20px; 
        }

        input[type="checkbox"] {
            margin-bottom: 10px; 
        }

        label {
            margin-left: 5px; 
        }

        input[type="submit"] {
            background-color: #007bff; 
            color: #fff; 
            padding: 10px 20px; 
            border: none; 
            border-radius: 4px; 
            cursor: pointer;
            display: block; 
            width: 100%; 
            transition: background-color 0.3s; 
        }

        input[type="submit"]:hover {
            background-color: #0056b3; 
        }

        .error-message {
            color: #dc3545; 
            font-size: 14px; 
            margin-top: 10px; 
        }
    </style>
</head>
<form action="/atribuirAvaliador/{{artigoId}}" method="post">
    <h2>Atribuir Avaliadores</h2>
    {{#each avaliadores}}
        <input type="checkbox" class="avaliador-checkbox" id="{{this.id}}" name="avaliadorId" value="{{this.id}}">
        <label for="{{this.id}}">{{this.nome}}</label><br>
    {{/each}}
    <input type="submit" value="Atribuir Avaliadores">
</form>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        var checkboxes = document.querySelectorAll('.avaliador-checkbox');

        var form = document.querySelector('form');

        form.addEventListener('submit', function(event) {
            var checkedCount = Array.from(checkboxes).filter(i => i.checked).length;

            if (checkedCount < 1 || checkedCount > 3) {
                event.preventDefault();

                alert('VocÃª deve selecionar entre 1 e 3 avaliadores');
            }
        });
    });
</script>

